{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "outDir": "./dist",         // Specify the output folder for compiled files
    "rootDir": "./src",         // Ensure it treats `src` as the root for input files
    "esModuleInterop": true     // Optional, but often needed for compatibility
  },
  "include": ["src"],            // Include TypeScript files only in `src`
  "exclude": ["node_modules"],    // Exclude dependencies
  "copy": ["src/public/**/*"]
}
